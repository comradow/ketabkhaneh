@model ketabkhaneh.Models.ViewModels.AddManagerViewModel
@{
    ViewData["Title"] = "Index";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <title>Login Manager</title>
</head>
<body>
    <div class="container">

        <nav class="navbar navbar-expand-lg navbar-light bg-white">
            <a class="navbar-brand text-warning" href="#">وبلاگ</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav">
                    <li class="nav-item active">
                        @Html.ActionLink("خانه", "index", "Home", new object { }, new { @class = "nav-link" })
                        @*<a class="nav-link" href="#">خانه <span class="sr-only">(current)</span></a>*@
                    </li>


                </ul>
                <form class="form-inline my-2 my-lg-0 mr-auto">
                    <input class="form-control mr-sm-2 placholder" type="search" style="border-top-left-radius: 0px !important;border-bottom-left-radius: 0px !important;" placeholder="دنبال چی میگردی؟" aria-label="Search">
                    <button class="btn btn-primary my-2 my-sm-0" style="border-top-right-radius: 0px !important; border-bottom-right-radius: 0px;" type="submit">جستجو</button>
                </form>
            </div>
        </nav>



    </div>

    <div class="back1">

        <br><br> <br><br>
        <h5 class="text-dark text-bala text-center">ثبت نام مدیر </h5>
        <br><br><br>
        <form asp-action="Insert" asp-controller="AddManager" method="post">
            <div class="container">
                <div class="row">
                    <div class="col-12 col-lg-6">
                        <input asp-for="Phone" type="number" class="form-control" placeholder="شماره" required /><br>
                    </div>
                    <div class="col-12 col-lg-6">
                        <input asp-for="Name" type="text" class="form-control" placeholder="نام" required /><br>
                    </div>
                    <div class="col-12 col-lg-6">
                        <input asp-for="LastName" type="text" class="form-control" placeholder="فامیل" required /><br>
                    </div>
                    <div class="col-12 col-lg-6">
                        <input asp-for="Email" type="email" class="form-control" placeholder="ایمیل" required /><br>
                    </div>
                    <div class="col-12 col-lg-6">
                        <input asp-for="Password" type="password" class="form-control" placeholder="پسورد" required /><br>
                    </div>
                    <div class="col-12 col-lg-6">
                        <p>سال تولد :</p>
                        <input asp-for="tarikhtavalod" type="date" class="form-control" placeholder="سال تولد" required /><br>
                    </div>


                </div>

                <center>
                    <div class="col-12">
                        <input type="submit" name="" id="" class="form-control btn btn-warning" value="ثبت مدیر">
                    </div>
                </center>
            </div>
        </form>
    </div>
</body>
</html>