@model List<ketabkhaneh.Models.DB.BookAndMag>
@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}


<div class="container">

    <!-- end meno -->
    <!-- start content -->
    <br class="d-none d-lg-block"><br class="d-none d-lg-block">
    <br class="d-none d-lg-block">


    <h5 class="text-primary">نتایج جستجو:  <i class="bi bi-chevron-double-left"></i></h5>
    </br class="d-none d-lg-flex">


    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-12 col-md-4 col-lg-3">
                <div class="post-item-2">
                    <a href="page.html">
                        <img src="~/img/bg3.jpg" alt="" width="100%" height="100%">
                        <div class="div-hover-p">
                        </div>
                    </a>
                    <p class="p-item"><a href="page.html">@item.Name</a></p>
                    <br><hr>
                    <i class="bi bi-eye-fill" style="margin-right: 10px;font-size: 14px;position: relative;bottom: 8px;color: #505050;"></i>
                    <span style="font-size: 12px;color: #505050;bottom: 10px;position: relative;">@item.Category </span>

                    <i class="bi bi-person-fill" style="font-size: 15px;float: left;margin-left: 7px;position: relative;bottom: 4px;color: #007bff;"></i>
                    <span style="font-size: 11px;float: left;position: relative;bottom: 2px;margin-left: 5px;font-weight: bold;color: #007bff;">@item.Author</span>
                </div>
            </div>
        }
    </div>

    <br><br><br>
</div>

